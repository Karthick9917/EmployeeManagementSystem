<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.ideas2it.employeeManagementSystem.model.Employee" table = "employee">

        <id name = "id" column = "employee_id">
            <generator class = "native"/>
        </id>

        <property name="firstName" column="first_name"/>
        <property name="lastName" column="last_name"/>
        <property name="dateOfBirth" column="date_of_birth"/>
        <property name="salary" column="salary"/>
        <property name="gender" column="gender"/>
        <property name="email" column="email"/>
        <property name="phoneNumber" column="phone_number"/>
        <property name="dateOfJoining" column="date_of_joining"/>
        <property name="role" column= "role"/>

        <bag name = "address" cascade = "save-update, delete" lazy = "false">
            <key column = "employee_id" not-null="true"/>
            <one-to-many class = "com.ideas2it.employeeManagementSystem.model.Address"/>
        </bag>

        <bag name = "project" cascade = "save-update" table = "employee_project">
            <key column = "employee_id"></key>
            <many-to-many column = "project_id" class = "com.ideas2it.employeeManagementSystem.model.Project"/>
        </bag>
    </class>
</hibernate-mapping>
