<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name = "com.ideas2it.employeeManagementSystem.model.Project" table = "project">

        <id name = "id" column = "project_id">
            <generator class = "native"/>
        </id>

        <property name="projectName" column="project_name"/>
        <property name="domain" column="domain"/>
        <property name="projectDue" column="projectDue"/>
        <property name="projectStart" column="project_start"/>
        <property name="projectEnd" column="project_end"/>

        <bag name = "employee" cascade = "save-update" table = "employee_project" lazy = "false">
            <key column = "project_id"></key>
            <many-to-many column = "employee_id" class = "com.ideas2it.employeeManagementSystem.model.Employee"/>
        </bag>

    </class>
</hibernate-mapping>